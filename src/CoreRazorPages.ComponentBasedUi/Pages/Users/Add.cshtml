@page
@model AddModel
@addTagHelper *, CoreRazorPages.ComponentBasedUi

<h1>
    Add User
</h1>

<div class="container col-md-4">
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div class="form-group">
           <label for="FirstName">First Name:</label>
            <input class="form-control" asp-for="UserVm.FirstName" />
        </div>
        <div class="form-group">
           <label for="LastName">Last Name:</label>
            <input class="form-control" asp-for="UserVm.LastName" />
        </div>
        <div class="form-group">
           <label for="Email">Email:</label>
            <input class="form-control" asp-for="UserVm.Email" />
        </div>
        <div class="form-group">
           <label for="IsCool">Is Cool:
            <input class="form-control" type="checkbox" asp-for="UserVm.IsCool" /></label>
        </div>

        <submit-button></submit-button>
        <cancel-button 
            cancel-route="Index">
        </cancel-button>        
    </form>
</div>
<div class="clearfix"></div>
