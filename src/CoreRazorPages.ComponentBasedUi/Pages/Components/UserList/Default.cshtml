@using CoreRazorPages.ComponentBasedUi.Shared.Entities
@model UserListViewModel

<div class="conatiner">
    <table class="table">
        <thead>
            <tr>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th></th>
                </tr>
            </tr>        
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    <a asp-page="@Model.EditRoute" asp-route-id="@user.Id">@Model.EditRoute</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>