@using CoreRazorPages.ComponentBasedUi.Shared.Entities
@model UserListViewModel
@addTagHelper *, CoreRazorPages.ComponentBasedUi

<div class="conatiner">
    <table class="table">
        <thead>
            <tr>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Is Cool
                    </th>
                    <th></th>
                </tr>
            </tr>        
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.IsCool
                </td>
                <td>
                    <vc:grid-crud-buttons  edit-route="@Model.EditRoute" delete-route="@Model.DeleteRoute" entity-id="@user.Id">
                    </vc:grid-crud-buttons>

                </td>
            </tr>
        }
        </tbody>
    </table>
</div>